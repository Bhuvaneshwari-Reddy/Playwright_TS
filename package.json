
{
  "name": "playwright-cucumber-project",
  "version": "1.0.0",
  "description": "End-to-end tests with Playwright and Cucumber",
  "main": "index.js",
  "scripts": {
    "pretest": "npx ts-node src/helper/init.ts",
    "test": "cucumber-js --format @cucumber/pretty-formatter",
    "report": "npx ts-node src/helper/report.ts",
    "test:ci": "npm run test && npm run report",
    "test:failed": "cucumber-js -p rerun @rerun.txt"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@playwright/test": "^1.52.0",
    "dotenv": "^16.5.0",
    "playwright": "^1.43.1"
  },
  "devDependencies": {
    "@cucumber/pretty-formatter": "^1.0.1",
    "multiple-cucumber-html-reporter": "^3.9.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
